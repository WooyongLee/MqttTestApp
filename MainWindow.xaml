<Window x:Class="MqttSubscriberApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MqttSubscriberApp"
        mc:Ignorable="d"
        Title="MQTT Service Manager" Height="550" Width="400" Closed="Window_Closed">
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="BorderBrush" Value="Gray"></Setter>
                <Setter Property="BorderThickness" Value="1"></Setter>
                <Setter Property="CornerRadius" Value="3"></Setter>
            </Style>
        </Grid.Resources>
        <StackPanel Orientation="Vertical">
            <Border>
                <StackPanel Orientation="Vertical" Margin="3">
                    <TextBlock Text=" - 옵션 - " Margin="0, 0, 0, 3"></TextBlock>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"></ColumnDefinition>
                            <ColumnDefinition Width="70"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Connection BackLog"></TextBlock>
                        <TextBlock Text="Port" Grid.Row="1"></TextBlock>

                        <TextBox x:Name="ConnectionBackLogTextBox" Grid.Column="1" Text="{Binding ConnectionBacklog}"></TextBox>
                        <TextBox x:Name="PortTextBox" Grid.Column="1" Grid.Row="1" Text="{Binding Port}"></TextBox>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Margin="0, 5, 0, 0">
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Button x:Name="StartButton" Margin="5" Content="시작" Command="{Binding StartCommand}"></Button>
                    <Button x:Name="StopButton" Margin="5" Content="중지" Command="{Binding StopCommand}"></Button>
                </StackPanel>
            </Border>
            
            <Border>
                <ListView x:Name="InfoListView" Height="400">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Time" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Time}">
                                            
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Information" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Information}">

                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </StackPanel>
    </Grid>
</Window>
